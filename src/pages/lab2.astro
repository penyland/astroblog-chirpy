---
import ThemeIcon from "../components/ThemeIcon.astro";
import "../styles/global.css";

const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Responsive Topbar</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
    />
  </head>
  <body>
    <div
      class="fixed top-0 w-full bg-transparent backdrop-blur-lg p-4 flex items-center"
    >
      <!-- Left aligned sun icon -->
      <div class="flex-1 text-gray-600">
        <i class="fas fa-bars"></i>
      </div>
      <!-- Center text that truncates on small screens -->
      <div class="flex-1 text-center truncate">
        <span>Your Truncated Text Here and it's very long indeed.</span>
      </div>
      <!-- Right aligned hamburger icon -->
      <div class="flex-1 text-right"></div>
      <i class="fa-brands fa-github"></i>
    </div>

    <!-- List of items under the topbar -->
    <div class="pt-16">
      <ul>
        <li class="p-4 border-b">Item 1</li>
        <li class="p-4 border-b">Item 2</li>
        <li class="p-4 border-b">Item 3</li>
        <!-- Add more items as needed -->
      </ul>
    </div>
  </body>
</html>
