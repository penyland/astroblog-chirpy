---
import Sidebar from "../components/Sidebar.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
    />
  </head>
  <body class="flex h-screen overflow-y-auto">
    <!-- Left Sidebar (Sticky) -->
    <Sidebar />

    <!-- Main Content + Right Sidebar Container -->
    <div class="flex-1 p-8 overflow-y-auto">
      <div class="max-w-7xl mx-auto flex p-8">
        <!-- Main Content -->
        <div class="flex-1 pr-16">
          <h1 class="text-3xl font-bold mb-8 text-left">Latest Blog Posts</h1>
          <div class="space-y-6">
            <!-- Blog post content goes here -->
            <slot />
          </div>
        </div>

        <!-- Right Sidebar -->
        <div class="w-72 p-4">
          <div class="border-l border-gray-300 pl-4 mb-8">
            <h2 class="text-lg font-semibold mb-4">Latest Articles</h2>
            <ul class="space-y-2">
              <li>
                <a href="#" class="text-blue-600 hover:underline">Article 1</a>
              </li>
              <li>
                <a href="#" class="text-blue-600 hover:underline">Article 2</a>
              </li>
              <li>
                <a href="#" class="text-blue-600 hover:underline">Article 3</a>
              </li>
              <li>
                <a href="#" class="text-blue-600 hover:underline">Article 4</a>
              </li>
              <li>
                <a href="#" class="text-blue-600 hover:underline">Article 5</a>
              </li>
            </ul>
          </div>

          <div class="border-l border-gray-300 pl-4">
            <h2 class="text-lg font-semibold mb-4">Tags</h2>
            <div class="flex flex-wrap gap-2">
              <span class="px-2 py-1 bg-gray-200 rounded-full text-sm"
                >Tag 1</span
              >
              <span class="px-2 py-1 bg-gray-200 rounded-full text-sm"
                >Tag 2</span
              >
              <span class="px-2 py-1 bg-gray-200 rounded-full text-sm"
                >Tag 3</span
              >
              <span class="px-2 py-1 bg-gray-200 rounded-full text-sm"
                >Tag 4</span
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
