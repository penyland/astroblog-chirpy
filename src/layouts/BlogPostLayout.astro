---
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <article>
    <header>
      <img
        class="w-full h-64 object-contain rounded-lg p-8 bg-gray-200"
        src={frontmatter.coverImage}
        alt={frontmatter.title}
      />

      <h1
        class="pt-8 text-2xl sm:text-4xl pb-8 font-bold text-left text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-sky-400"
      >
        {frontmatter.title}
      </h1>
      <p>{frontmatter.date.toLocaleDateString()}</p>
    </header>
    <div class="mt-12 max-w-4xl">
      <div
        class="text-sm prose text-neutral-600 prose-a:font-normal prose-a:text-blue-400 hover:prose-a:text-black prose-h1:text-black prose-img:border-2 prose-img:bg-neutral-50 prose-img:border-transparent prose-h2:text-black prose-h2:font-semibold prose-p:text-sm prose-pre:font-mono max-w-none prose-pre:rounded-none prose-headings:font-display"
      >
        <slot />
      </div>
    </div>
    <div class="mt-12">Tags</div>
    <div class="mt-12">Share</div>
  </article>
</BaseLayout>
