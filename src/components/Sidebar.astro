---
import config from "../config/config.json";
import { FaBluesky } from "react-icons/fa6";
---

<aside
  id="sidebar"
  class="w-64 bg-gray-200 p-4 h-screen sticky top-0 flex flex-col justify-between"
>
  <!-- Sidebar content here -->
  <div class="flex flex-col items-center">
    <img
      src="peter.jpg"
      alt="Logo"
      class="w-32 h-32 rounded-full object-cover mt-10"
      style="object-position: 50% 0%;"
    />
    <h1 class="text-lg mt-4">penyland</h1>
    <p class="text-sm text-gray-600 p-6">{config.site.tagline}</p>
  </div>

  <!-- Social media icons -->
  <div class="flex justify-center gap-4 mb-4">
    <a
      href="https://github.com/penyland"
      target="_blank"
      class="text-lg text-gray-600 hover:text-gray-900"
    >
      <i class="fa-brands fa-github"></i>
    </a>
    <a
      href="https://twitter.com/peternylander"
      target="_blank"
      class="text-lg text-gray-600 hover:text-gray-900"
    >
      <i class="fa-brands fa-twitter"></i>
    </a>
    <a
      href="https://bsky.app/profile/peternylander.bsky.social"
      target="_blank"
      class="text-lg text-gray-600 hover:text-gray-900 inline-block"
      >
      <div class="w-4.5 h-4.5">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 512 512"
          class="w-full h-full fill-current"
        >
          <!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.-->
          <path
            d="M111.8 62.2C170.2 105.9 233 194.7 256 242.4c23-47.6 85.8-136.4 144.2-180.2c42.1-31.6 110.3-56 110.3 21.8c0 15.5-8.9 130.5-14.1 149.2C478.2 298 412 314.6 353.1 304.5c102.9 17.5 129.1 75.5 72.5 133.5c-107.4 110.2-154.3-27.6-166.3-62.9l0 0c-1.7-4.9-2.6-7.8-3.3-7.8s-1.6 3-3.3 7.8l0 0c-12 35.3-59 173.1-166.3 62.9c-56.5-58-30.4-116 72.5-133.5C100 314.6 33.8 298 15.7 233.1C10.4 214.4 1.5 99.4 1.5 83.9c0-77.8 68.2-53.4 110.3-21.8z"
          ></path>
        </svg>
      </div>
      <a
        href="https://penyland.github.io/rss"
        target="_blank"
        class="text-lg text-gray-600 hover:text-gray-900"
      >
        <i class="fa-solid fa-rss"></i>
      </a>
    </a>
  </div>
</aside>
