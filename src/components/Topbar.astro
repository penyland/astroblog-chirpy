---
import ThemeIcon from "./ThemeIcon.astro";

const { pageTitle } = Astro.props;
---

<!-- Hamburger Button (mobile only) -->
<input type="checkbox" id="sidebar-toggle" class="peer hidden" />
<div class="fixed top-3 left z-50 flex align-top">
  <label
    for="sidebar-toggle"
    class="hover:bg-gray-100 rounded-lg cursor-pointer dark:text-white ml-4 transition-color duration-300 ease-in-out lg:hidden"
  >
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M4 6h16M4 12h16M4 18h16"></path>
    </svg>
  </label>
</div>

<div class="fixed top-3 z-0 align-top flex justify-center w-full">
  <!-- Blog Title (Mobile Only) -->
  <div class="font-semibold lg:hidden dark:text-white text-neutral-400">{pageTitle}</div>
</div>

<div class="fixed top-3 right-4 z-0 flex align-top">
  <ThemeIcon />
</div>

<!-- Overlay (clickable background) -->
<div
  class="fixed inset-0 bg-black/50 peer-checked:block hidden z-20 md:hidden"
  onclick="document.getElementById('sidebar-toggle').checked = false;"
>
</div>
